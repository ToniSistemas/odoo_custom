<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('pay')]" position="after">
            <t t-if='pos.config.allow_open_cash_d'>
                <style>
                    .pos .actionpad .button.pay {
                        height: 108px;
                    }
                </style>
                <button class='button js-open-cashdrawer' t-on-click="() => this._openCashDrawer()">
                    <i class='fa fa-archive' /> Open Cashbox
                </button>
            </t>
        </xpath>
    </t>
    <t t-name="point_of_sale.PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
            <div t-if='pos.config.allow_open_cash_d' class="button" t-on-click="() => this.new_js_cashdrawer()">
                 <i class='fa fa-archive' /> Open Cashbox
            </div>
        </xpath>
    </t>
</templates>