<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add quick_ean field to picking form view - Operations tab -->
    <record id="view_picking_form_ean" model="ir.ui.view">
        <field name="name">stock.picking.form.ean</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add to detailed operations -->
            <xpath expr="//field[@name='move_line_ids_without_package']/tree//field[@name='product_id']" position="after">
                <field name="quick_ean" 
                       placeholder="Escanear EAN"
                       optional="show"/>
            </xpath>
            <!-- Add to operations if move_line_nosuggest_ids exists -->
            <xpath expr="//field[@name='move_line_nosuggest_ids']/tree//field[@name='product_id']" position="after">
                <field name="quick_ean" 
                       placeholder="Escanear EAN"
                       optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
