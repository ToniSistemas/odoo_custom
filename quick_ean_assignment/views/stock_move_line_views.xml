<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add quick_ean field to stock.picking form view -->
    <record id="view_picking_form_inherit_ean" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.ean</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add field in Detailed Operations tab after product_id -->
            <xpath expr="//field[@name='move_line_ids_without_package']//field[@name='product_id']" position="after">
                <field name="quick_ean" placeholder="Escanear EAN" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Add quick_ean field directly to stock.move.line list view -->
    <record id="view_move_line_tree_ean" model="ir.ui.view">
        <field name="name">stock.move.line.tree.ean</field>
        <field name="model">stock.move.line</field>
        <field name="arch" type="xml">
            <list string="Stock Moves" editable="bottom">
                <field name="product_id" readonly="1"/>
                <field name="lot_id" optional="show"/>
                <field name="location_id" readonly="1" optional="show"/>
                <field name="location_dest_id" readonly="1" optional="show"/>
                <field name="quantity" readonly="1"/>
                <field name="product_uom_id" readonly="1" optional="hide"/>
                <field name="quick_ean" placeholder="Escanear EAN" optional="show"/>
                <field name="state" column_invisible="1"/>
            </list>
        </field>
    </record>

</odoo>
