<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add quick_ean to stock.picking Operations tab (stock.move) -->
    <record id="view_picking_form_inherit_move_ean" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.move.ean</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/list//field[@name='product_id']" position="after">
                <field name="quick_ean" string="EAN" placeholder="Escanear EAN"/>
            </xpath>
        </field>
    </record>

    <!-- Add quick_ean to detailed operations view -->
    <record id="view_stock_move_line_detailed_inherit_ean" model="ir.ui.view">
        <field name="name">stock.move.line.detailed.inherit.ean</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree_detailed"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="quick_ean" string="EAN" placeholder="Escanear EAN"/>
            </field>
        </field>
    </record>

    <!-- Add quick_ean to operations tree view -->
    <record id="view_stock_move_line_operation_inherit_ean" model="ir.ui.view">
        <field name="name">stock.move.line.operation.inherit.ean</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="quick_ean" string="EAN" placeholder="Escanear EAN"/>
            </field>
        </field>
    </record>

    <!-- Add quick_ean to general tree view -->
    <record id="view_stock_move_line_tree_inherit_ean" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherit.ean</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="quick_ean" string="EAN" placeholder="Escanear EAN"/>
            </field>
        </field>
    </record>

</odoo>
