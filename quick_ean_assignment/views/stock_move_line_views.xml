<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom list view for stock.move.line with quick_ean field -->
    <record id="view_move_line_tree_ean" model="ir.ui.view">
        <field name="name">stock.move.line.tree.ean</field>
        <field name="model">stock.move.line</field>
        <field name="arch" type="xml">
            <list string="Stock Moves" editable="bottom">
                <field name="product_id" readonly="1"/>
                <field name="lot_id" optional="show"/>
                <field name="location_id" readonly="1" optional="show"/>
                <field name="location_dest_id" readonly="1" optional="show"/>
                <field name="quantity" readonly="1"/>
                <field name="product_uom_id" readonly="1" optional="hide"/>
                <field name="quick_ean" placeholder="Escanear EAN" optional="show"/>
                <field name="state" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Menu action to access stock move lines with EAN assignment -->
    <record id="action_stock_move_line_ean" model="ir.actions.act_window">
        <field name="name">Asignar EAN en Movimientos</field>
        <field name="res_model">stock.move.line</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_move_line_tree_ean"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay líneas de movimiento
            </p>
            <p>
                Desde aquí puedes asignar códigos EAN a productos escaneándolos directamente.
            </p>
        </field>
    </record>

    <menuitem id="menu_stock_move_line_ean"
              name="Asignar EAN (Movimientos)"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_stock_move_line_ean"
              sequence="102"/>

</odoo>
