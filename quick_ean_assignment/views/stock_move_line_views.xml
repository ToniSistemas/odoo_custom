<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add quick_ean field directly to stock.move.line tree view -->
    <record id="view_move_line_tree_ean" model="ir.ui.view">
        <field name="name">stock.move.line.tree.ean</field>
        <field name="model">stock.move.line</field>
        <field name="arch" type="xml">
            <tree string="Stock Moves" editable="bottom">
                <field name="product_id" readonly="1"/>
                <field name="lot_id" optional="show"/>
                <field name="location_id" readonly="1" optional="show"/>
                <field name="location_dest_id" readonly="1" optional="show"/>
                <field name="quantity" readonly="1"/>
                <field name="product_uom_id" readonly="1" optional="hide"/>
                <field name="quick_ean" placeholder="Escanear EAN" optional="show"/>
                <field name="state" column_invisible="1"/>
            </tree>
        </field>
    </record>

</odoo>
