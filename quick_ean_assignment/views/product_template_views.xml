<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add referencia field to product template form -->
    <record id="view_product_template_form_referencia" model="ir.ui.view">
        <field name="name">product.template.form.referencia</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="x_referencia" placeholder="Referencia del producto"/>
            </field>
        </field>
    </record>

    <!-- Add referencia field to product template list view -->
    <record id="view_product_template_tree_referencia" model="ir.ui.view">
        <field name="name">product.template.tree.referencia</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="x_referencia" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Add button to product template form -->
    <record id="view_product_template_form_ean_button" model="ir.ui.view">
        <field name="name">product.template.form.ean.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_assign_ean_wizard"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-barcode"
                        invisible="variants_without_ean_count == 0">
                    <field name="variants_without_ean_count" widget="statinfo" string="Sin EAN"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
